%html
	%head
		<!-- @stylesheet style -->
		<!-- @stylesheet style -->
		<!-- @reload --> 
		%title 100 Minds
		<script type="text/javascript" src="//use.typekit.net/qwt2ghx.js"></script>
		<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
